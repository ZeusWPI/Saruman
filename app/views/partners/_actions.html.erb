<%= link_to raw('<span class="glyphicon glyphicon-edit"></span> Edit'), edit_partner_path(partner), class: "btn btn-default btn-xs", remote: true %>
<% if partner.sent %>
  <%= link_to raw('<i class="glyphicon glyphicon-retweet"></i> Resend login link'), resend_partner_path(partner), class: 'btn btn-xs btn-default', remote: true %>
<% else %>
  <%= link_to raw('<i class="glyphicon glyphicon-envelope"></i> Send login link'), resend_partner_path(partner), class: 'btn btn-xs btn-warning', remote: true %>
<% end %>
<%= link_to raw('<i class="glyphicon glyphicon-trash"></i> Delete'), partner_path(partner), class: 'btn btn-xs btn-danger', data: {confirm: 'Are you sure?'}, remote: true, method: :delete %>
