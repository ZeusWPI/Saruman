<%= form_with model: object, html: { style: 'display: contents' } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Partner name" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= f.fields_for :users, User.build do |ff| %>
    <div class="form-group">
      <%= ff.label :name, "Responsible name"%>
      <%= ff.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= ff.label :email, "Responsible email" %>
      <%= ff.email_field :email, class: 'form-control' %>
    </div>
  <% end %>
  <%= f.submit button_name, class: 'btn btn-primary' %>
<% end %>
