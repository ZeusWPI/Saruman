<div class="tr" id="<%= dom_id(item) %>">
  <span class="td"><%= item.name %></span>
  <span class="td"><%= item.description %></span>
  <span class="td"><%= euro item.price %></span>
  <span class="td"><%= euro item.deposit %></span>
  <span class="td">
    <div class="nowrap">
      <%= render "items/actions", item: item %>
    </div>
  </span>
</div>
