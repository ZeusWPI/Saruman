<%= render 'header' %>

<div class='padded card'>
  <h3>General info</h3>

  <%= form_for @item, html: { class: 'ui form' } do |f| %>

    <div class='field'>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: true %>
    </div>

    <div class='field'>
      <%= f.label :description %>
      <%= f.text_field :description, placeholder: true %>
    </div>

    <div class='field'>
      <%= f.label :price %>
      <%= f.number_field :price, placeholder: true %>
    </div>

    <div class='field'>
      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: true }, placeholder: true, class: 'ui search dropdown' %>
    </div>

    <%= f.submit 'Create', class: 'fluid ui button' %>
  <% end %>
</div>
