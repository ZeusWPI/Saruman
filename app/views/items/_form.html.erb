<tr>
  <%= form_for [object], remote: true do |f| %>
    <td><%= f.text_field :name, class: 'form-control' %></td>
    <td><%= f.text_field :description, class: 'form-control' %></td>
    <td><%= f.text_field :price, value: number_with_precision(f.object.price, precision: 2), class: 'form-control', placeholder: "0.00" %></td>
    <td><%= f.select :category, Item.categories.keys, { include_blank: true }, { class: 'form-control' } %></td>
    <td><%= f.button button_name, class: 'btn btn-sm btn-primary' %></td>
    <%= javascript_tag do %>
      var id = "#<% if button_name == 'Save' %>edit_<% end %><%= dom_id(f.object) %>";
      var inputs = $(id).parent().find('input');
      var select = $(id).parent().find('select')[0];
      $(id).parent().find('button').on('click', function(e) {
        e.preventDefault();
        $(id).append(inputs.clone());
        $(id).append('<input name="item[category]" value="' + select.options[select.selectedIndex].value + '">')
        $(id).append('<input type="hidden" name="_method" value="<%= action %>">');
        $(id).submit();
      });
    <% end %>
  <% end %>
</tr>
