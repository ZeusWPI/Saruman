<%= form_for [object] do |f| %>
  <%= form_text_field f, :name %>
  <%= form_text_field f, :description %>
  <%= form_price_field f, :price, value: number_with_precision(f.object.price, precision: 2) %>
  <%= form_price_field f, :deposit, value: number_with_precision(f.object.deposit, precision: 2) %>
  <%= f.hidden_field :category, value: category %>
  <%= f.button button_name(object, category), class: 'btn btn-primary' %>
<% end %>
