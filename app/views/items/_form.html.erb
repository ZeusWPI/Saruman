<%= form_for [object], remote: true, html: { class: 'tr' } do |f| %>
  <span class="td"><%= f.text_field :name, class: 'form-control' %></span>
  <span class="td"><%= f.text_field :description, class: 'form-control' %></span>
  <span class="td"><%= f.text_field :price, value: number_with_precision(f.object.price, precision: 2), class: 'form-control', placeholder: "0.00" %></span>
  <%= f.hidden_field :category, value: category %>
  <span class="td"><%= f.button "Add #{category}", class: 'btn btn-sm btn-primary' %></span>
<% end %>
