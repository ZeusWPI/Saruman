<tr>
  <%= form_for [object], remote: true do |f| %>
    <td><%= f.text_field :name, class: 'form-control' %></td>
    <td><%= f.text_field :description, class: 'form-control' %></td>
    <td><%= f.text_field :price, value: number_with_precision(f.object.price, precision: 2), class: 'form-control', placeholder: "0.00" %></td>
    <td><%= f.number_field :quantity, class: 'form-control' %></td>
    <td><input type="hidden" name="_method" value="<%= action %>"><%= f.submit button_name, class: 'btn btn-sm btn-primary' %></td>
  <% end %>
</tr>
