<% if flash[:error] %>
  $("#flash-modal").replaceWith("<%= escape_javascript render partial: 'flash' %>");
<% else %>
  $('#disapprove-modal').modal('hide');
  $('#<%= dom_id(@reservation) %>').replaceWith("<%= j render @reservation %>");
  $('#price-statistics').replaceWith("<%= j render 'reservations/statistics' %>");
  $(".reservation-disapprove-tooltip").tooltip();
<% end %>
