<% if @duplicate.nil? %>
  $('#<%= dom_id(@reservation) %>').replaceWith("<%= j render @reservation %>");
<% else %>
  $('#<%= dom_id(@duplicate) %>').replaceWith("<%= j render @duplicate %>");
  $('#<%= dom_id(@reservation) %>').remove();
<% end %>
$('#price-statistics').replaceWith("<%= j render 'reservations/statistics' %>");
