<div class="table-responsive">
  <table class="table table-striped" id="table-reservations">
    <thead>
      <th>Item</th>
      <th>Item description</th>
      <th>Count</th>
      <th>Price (each)</th>
      <th>Price (total)</th>
      <th>Approved</th>
      <th width="210">Actions <span id="item-edit-tooltip" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Approved items can not be edited or deleted. Please contact an admin to edit these. Only the amount of unapproved items can be changed."></span></th>
    </thead>
    <tbody>
      <%= render reservations %>
      <%= render "reservations/form", object: @partner.reservations.new, action: 'post', button_name: "Add reservation" %>
    </tbody>
  </table>
  <div id='reservation-errors' class='form-errors'>
  </div>
</div>
