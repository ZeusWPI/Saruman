<div class="modal fade" id="disapprove-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Disapprove reservation</h4>
      </div>
      <%= form_tag disapprove_user_reservations_path(@partner), remote: true do %>
        <div class="modal-body">
          <div id="flash-modal"></div>
          <div class="form-group">
            <input type="text" class="form-control" name="disapprove[reason]" id="disapprove-reason" placeholder="Reason">
          </div>
          <input type="hidden" class="form-control" name="disapprove[id]" id="disapprove-id">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-danger">Disapprove</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
