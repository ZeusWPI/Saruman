<%= render 'header' %>

<div class='padded card'>
  <h3>General info</h3>

  <%= form_for @category, html: { class: 'ui form' } do |f| %>

    <div class='field'>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: true %>
    </div>

    <div class='field'>
      <%= f.label :deadline %>
      <%= f.date_field :deadline, placeholder: true %>
    </div>

    <%= f.submit 'Create', class: 'fluid ui button' %>
  <% end %>
</div>
